@model IEnumerable<GlobantTraining.DAL.Entities.TypeProduct>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TypeProductId">Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.TypeProductId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
